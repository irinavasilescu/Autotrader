{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    - Cars
{% endblock %}

{% block body %}
    <h1> Our offer </h1>

    <div>
        {{ form_start(form, { attr: { style: 'display: inline-flex; float: right;' } }) }}
        {{ form_widget(form.search, { attr: { placeholder: 'Search' } }) }}
        <button type="submit" class="btn">Search</button>
        {{ form_end(form) }}
    </div>

    <table class="table">
        <tr>
            <th>Make</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
        {% for car in cars %}
            <tr>
                <td>{{ car.make.name }}</td>
                <td>{{ car.model.name }}</td>
                <td>
                    <a href="{{ url('show_car', {id: car.id}) }}">Show details</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
